<Window x:Class="portfolio.MainWindow"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:portfolio.ViewModels"
        xmlns:inf="clr-namespace:portfolio.Infrastructure"
        mc:Ignorable="d"
        Title="Crypto portfolio" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <inf:ImageSourceConverter x:Key="ImageSourceConverter"/>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontFamily" Value="Brevia"/>
            <Setter Property="Background" Value="BlanchedAlmond"/>
            <Setter Property="Opacity" Value="0.78"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontFamily" Value="Brevia Light"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontFamily" Value="Brevia"/>
            <Setter Property="Background" Value="LightBlue"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>
    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/Resources/pastelAbstraction.jpg" Opacity="0.9"></ImageBrush>
    </Window.Background>
    <Grid x:Name="gridGeneral" Margin="8. 8. 8. 8.">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.55*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="1.1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid x:Name="gridData" Grid.RowSpan="2">
            <TabControl Margin="5,0,0,5" BorderBrush="Gainsboro">
                <TabControl.Background>
                    <ImageBrush ImageSource="pack://application:,,,/Resources/light-yellow.jpg" Opacity="0.75"></ImageBrush>
                </TabControl.Background>
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border" BorderThickness="0,0,0,0" BorderBrush="LemonChiffon" CornerRadius="4,4,0,0" Margin="2,0">
                                        <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="10,2"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="LemonChiffon" />
                                            <Setter TargetName="Border" Property="Opacity" Value="0.8" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter TargetName="Border" Property="Background" Value="DarkKhaki" />
                                            <Setter TargetName="Border" Property="Opacity" Value="0.6" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>
                <TabItem Header="Coins">
                    <!--<TabItem.Background>
                        <ImageBrush ImageSource="pack://application:,,,/Resources/light-yellow.jpg" Opacity="0.65"></ImageBrush>
                    </TabItem.Background>-->
                    <Border>
                        <!--<Border.Background>
                            <ImageBrush ImageSource="pack://application:,,,/Resources/light-yellow.jpg" Opacity="0.65"></ImageBrush>
                        </Border.Background>-->
                        <DockPanel Grid.Row="1">
                            
                            <!--<DockPanel.Background>
                                <ImageBrush ImageSource="pack://application:,,,/Resources/light-yellow.jpg" Opacity="0.65"></ImageBrush>
                            </DockPanel.Background>-->
                            
                            <GroupBox Header="Coin list" Width="464" DockPanel.Dock="Left">
                                <DataGrid Margin="5,0,5,0" x:Name="grCoinsData" Grid.Row="0" Grid.Column="1" 
                                          ItemsSource="{Binding Coins}"
                                          AutoGenerateColumns = "False"
                                    SelectedValue="{Binding SelectedCoin}" SelectedIndex="0">
                                    <!--SelectionChanged="transactionsOnCoinToList">-->
                                    
                                    <!--<DataGrid.Background>
                                        <ImageBrush ImageSource="pack://application:,,,/Resources/light-yellow.jpg" Opacity="0.65"></ImageBrush>
                                    </DataGrid.Background>-->
                                    
                                    <DataGrid.Columns>
                                        <DataGridTemplateColumn >
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    
                                                    <Image 
                                                        Stretch="Fill" 
                                                        Width="20" Height="20" 
                                                        Source="{Binding PictureName, Converter={StaticResource ImageSourceConverter}, Mode=TwoWay}"/>
                                                    </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTextColumn Header="Coin" Width="35"
                                                            Binding="{Binding Path=ShortName}"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Amount"
                                                            Binding="{Binding Path=Amount}"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Purchase price"
                                                            Binding="{Binding Path=AveragePurchasePrice, StringFormat={}{0:C}}"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Current price"
                                                            Binding="{Binding Path=CurrentPrice, StringFormat={}{0:C}}"></DataGridTextColumn>
                                    </DataGrid.Columns>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="SelectionChanged">
                                            <i:InvokeCommandAction
                                        Command="{Binding GetTransactionCommand}"
                                        CommandParameter="{Binding SelectedCoin.CoinId}">
                                            </i:InvokeCommandAction>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </DataGrid>
                                <!--<ListView x:Name="Coins"
                                          ItemsSource="{Binding Coins}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Image Width="20" 
                                                       Source="{Binding PictureName, Converter={StaticResource ImageSourceConverter}}"/>
                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                    <TextBlock Text="{Binding ShortName}" HorizontalAlignment="Left" Margin="30,0,0,0"/>
                                                    <TextBlock Text="{Binding Amount}" HorizontalAlignment="Left" Margin="30,0,0,0"/>
                                                    <TextBlock Text="{Binding AveragePurchasePrice, StringFormat={}{0:0.00 $}}" Margin="5,0,0,0"/>
                                                    <TextBlock Text="{Binding CurrentPrice, StringFormat={}{0:0.00 $}}" Margin="5,0,0,0"/>
                                                    <TextBlock Text="{Binding DateUpdate, StringFormat={}{0:dd.MM.yyyy г.р.}}" HorizontalAlignment="Left" Margin="5,0,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>-->
                            </GroupBox>
                        </DockPanel>
                        <!--<ListView x:Name="Coins" 
                          ItemsSource="{Binding Coins}"
                          SelectedValue="{Binding SelectedCoin}" SelectedIndex="0">
                            --><!--#region Обработка события Selection Canged --><!--
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="SelectionChanged">
                                    <i:InvokeCommandAction
                                        Command="{Binding GetTransactionCommand}"
                                        CommandParameter="{Binding SelectedCoin.CoinId}">
                                    </i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            --><!--#endregion--><!--
                            
                            <ListView.Background>
                                <ImageBrush ImageSource="pack://application:,,,/Resources/light-yellow.jpg" Opacity="0.65"></ImageBrush>
                            </ListView.Background>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding CoinName}"/>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>-->
                    </Border>
                </TabItem>
                <TabItem Header="Transaction">
                    <!--<TextBlock>Transaction</TextBlock>-->
                </TabItem>
                
            </TabControl>
        </Grid>

        <Grid x:Name="gridStatistic" Grid.Column="1" Grid.Row="0">
            <TabControl Margin="10" BorderBrush="Gainsboro">
                <TabControl.Background>
                    <ImageBrush ImageSource="pack://application:,,,/Resources/light-yellow.jpg" Opacity="0.75"></ImageBrush>
                </TabControl.Background>
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border" BorderThickness="0,0,0,0" BorderBrush="LemonChiffon" CornerRadius="4,4,0,0" Margin="2,0">
                                        <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="10,2"/>
                                        
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="LemonChiffon" />
                                            <Setter TargetName="Border" Property="Opacity" Value="0.8" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter TargetName="Border" Property="Background" Value="DarkKhaki" />
                                            <Setter TargetName="Border" Property="Opacity" Value="0.6" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>


                <TabItem Header="Desc">
                    <Grid DataContext="{Binding SelectedCoin}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.4*"></RowDefinition>
                            <RowDefinition Height="0.4*" ></RowDefinition>
                            <RowDefinition Height="3*" ></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                            <ColumnDefinition Width="1*"></ColumnDefinition>                            
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                  
                        <!--<TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left">Symbol: </TextBlock>-->
                        <!--<TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Symbol}"/>-->
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CoinName}"/>
                        <TextBlock Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left">Amount: </TextBlock>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Amount}"/>                     
                        <TextBlock Grid.Row="1" Grid.Column="2" HorizontalAlignment="Left">Current price: </TextBlock>
                        <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding CurrentPrice, StringFormat={}{0:# ###.00}$}"/> 
                        <!--<TextBlock Grid.Row="4" Grid.Column="0" HorizontalAlignment="Left">Value: </TextBlock>
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding ValueUSD, StringFormat={}{0:# ###.00}$}"/>-->

                        <GroupBox Grid.Row="5" Grid.ColumnSpan="2" Header="Last buy transaction" Margin="2" Padding="2">
                            <ListView x:Name="Transaction" ItemsSource="{Binding Buyings}">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>
                                                <RowDefinition></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding TransactionId}"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Amount}"/>
                                            <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding Priсe}"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </GroupBox>

                        <!--<TextBlock HorizontalAlignment="Right">Name:</TextBlock>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CoinName}"/>
                        
                        <TextBlock HorizontalAlignment="Right">Symbol:</TextBlock>
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding Symbol}"/>


                        <TextBlock Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right">Начало занятий:</TextBlock>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Commence, StringFormat={}{0:dd.MM.yyyy}}"/>
                        <TextBlock Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right">Стоимость:</TextBlock>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding BasePrice, StringFormat={}{0:# ###.00}
рублей}"/>-->

                    </Grid>
                    
                </TabItem> 
                
                
                <TabItem Header="Second">
                    <TextBlock>test2</TextBlock>
                </TabItem> 
            </TabControl>
           
           <!--<Border>
                    <ListBox x:Name="listStatistic" Margin="15, 5, 5, 5" Height="Auto">
                        <ListBox.Background>
                            <ImageBrush ImageSource="pack://application:,,,/Resources/light-yellow.jpg" Opacity="0.75"></ImageBrush>
                        </ListBox.Background>
                    </ListBox>
           </Border>-->
        </Grid>


        <Grid x:Name="gridPanel" Grid.Column="1" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel x:Name="st1" Grid.Column="0" Margin="0 100 15 10" VerticalAlignment="Bottom">
                <Button Height="26" Margin="0,1,15,1" Background="Aqua" Name="btnInsert" Content="сurrent"/>
                <Button Height="26" Margin="0,1,15,1" Background="Yellow" Name="btnFind" Content="by bought price"/>
                <Button Height="26" Margin="0,1,15,1" Background="Orchid" Name="btnUpdate" Content="ratio"/>
            </StackPanel>
            <StackPanel x:Name="st2" Grid.Column="1" Margin="30,15,10,80">
                <Button Name="AddCoin" Content="Add coin" />
                <Button Name="AddTransaction" Content="Add transaction" />
                <Button Visibility="Hidden" Name="Find" Content="Find"/>
                
                
                <!--<Button Content="Simple Command" Command="{Binding SimpleCommand}" />-->
                
                
                
                <!--<Button Name="Update"  Content="Update"/>-->
            </StackPanel>
        </Grid>
    </Grid>
</Window>
